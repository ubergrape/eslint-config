{
  "extends": "eslint-config-airbnb",
  "rules": {
    "brace-style": [2, "stroustrup"],
    "comma-dangle": [2, "never"],
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, {"SwitchCase": 1}],    
    "no-unexpected-multiline": 2,
    "semi": [2, "never"]
  },
  "parser": "babel-eslint",
  "env": {
    "mocha": true
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true
  }
}
