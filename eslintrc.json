{
  "extends": "eslint-config-airbnb",
  "plugins": [
    "babel"
  ],
  "rules": {
    "comma-dangle": [2, "never"],
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-unexpected-multiline": 2,
    "semi": [2, "never"],
    "react/no-multi-comp": [2, {"ignoreStateless": true}],
	"object-curly-spacing": 0,
	"babel/object-curly-spacing": [2, "never"]
  },
  "parser": "babel-eslint",
  "env": {
    "mocha": true
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true
  }
}
